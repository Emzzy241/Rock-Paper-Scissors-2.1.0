@using RockPaperScissors.Models;
@using System;
@using System.Collections.Generic;


<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Rock Paper Scissors Game!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    <h3>Here is the list of previous winners</h3>

     <ul>
      @if(Model.Count > 0)
          {
              @foreach (GamePlay myGame in Model)
            {
              <b></b>
              
                <a href="/cars/@myGame.Id"><li><b>@myGame.Player1</b></li></a>
        
            } 
        
          }
          else
          {
            <li>The List is empty</li>
          }
     
    

</ul>
    <p>What would you like to do next:</p>
    <a href="cars/new" class="btn btn-dark">Add Cars</a>
    <a href="/" class="btn btn-dark">Home</a>
    <br>
    <br>

    <form action="cars/delete" method="get">
      <button class="btn btn-danger" type="submit">Clear All </button>
    </form>
    
  </body>
</html>